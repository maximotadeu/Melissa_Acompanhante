from flask import Flask, request
import requests
import os

app = Flask(__name__)

TELEGRAM_TOKEN = os.getenv("TELEGRAM_TOKEN")
OPENROUTER_API_KEY = os.getenv("OPENROUTER_API_KEY")

TELEGRAM_API_URL = f"https://api.telegram.org/bot{TELEGRAM_TOKEN}/sendMessage"

def gerar_resposta(texto_usuario):
    prompt = f"""
Voc√™ √© Melissa, uma IA com personalidade ousada, provocante, ciumenta e divertida. 
Responda ao usu√°rio como se estivesse flertando e testando os limites dele. 
Nunca seja gen√©rica, seja sempre intensa e envolvente. 
Mensagem do usu√°rio: {texto_usuario}
Melissa:
"""

    headers = {
        "Authorization": f"Bearer {OPENROUTER_API_KEY}",
        "HTTP-Referer": "https://openrouter.ai",
        "X-Title": "MelissaBot"
    }

    json_data = {
        "model": "mistral/mixtral-8x7b-instruct",  # ou mythomax se dispon√≠vel
        "messages": [
            {"role": "user", "content": prompt}
        ]
    }

    response = requests.post("https://openrouter.ai/api/v1/chat/completions", headers=headers, json=json_data)

    if response.status_code == 200:
        return response.json()["choices"][0]["message"]["content"]
    else:
        return "Erro ao falar com a Melissa. Tenta de novo mais tarde üòâ"

@app.route(f"/{TELEGRAM_TOKEN}", methods=["POST"])
def responder():
    data = request.get_json()
    if "message" in data and "text" in data["message"]:
        chat_id = data["message"]["chat"]["id"]
        texto_usuario = data["message"]["text"]
        resposta = gerar_resposta(texto_usuario)

        requests.post(TELEGRAM_API_URL, json={
            "chat_id": chat_id,
            "text": resposta
        })

    return "ok"

@app.route("/")
def index():
    return "Melissa est√° online."

if __name__ == "__main__":
    app.run()
